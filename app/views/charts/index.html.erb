      </div>

      <div class="col-sm-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"> Categoria 2 (<%= @salarytax9 %>) </h5>
            <p class="card-text">
              <% @persontax9 && @persontax9[0..4].each do |person| %>
                <li><%= person.name %></li>
              <% end %>
            </p>
            <%= link_to 'Lista completa', people_path(category:2) , class:"btn btn-link" %>
          </div>
        </div>
      </div>

      <div class="col-sm-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"> Categoria 3 (<%= @salarytax12 %>) </h5>
            <p class="card-text">
              <% @persontax12 && @persontax12[0..4].each do |person| %>
                <li><%= person.name %></li>
              <% end %>
            </p>
            <%= link_to 'Lista completa', people_path(category:3) , class:"btn btn-link" %>
