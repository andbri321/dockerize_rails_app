<div class="card">
  <div class="card-header">
    Dashboard
  </div>
  <div class="card-body" >
    <div class="row">
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"> Quantidade de Contribuintes </h5>
            <p class="card-text">
              <canvas id="personChart"></canvas>
            </p>
          </div>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"> Valor Arrecadado por Categoria</h5>
              <canvas id="discountChart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="card">

  <div class="card-body" >
    <div class="row">
      <div class="col-sm-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"> Categoria 1 (<%= @salarytax75 %>) </h5>
            <p class="card-text">
              <% @person_tax75 && @persontax75[0..4].each do |person| %>
